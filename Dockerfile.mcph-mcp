# MCP server for Mongo/DocumentDB (python)
FROM python:3.11-slim
RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates && rm -rf /var/lib/apt/lists/*
WORKDIR /opt/docdb-mcp
COPY MCP/mongo-docdb.py /opt/docdb-mcp/mongo-docdb.py
RUN pip install --no-cache-dir pymongo fastmcp tomlkit
ENTRYPOINT ["python", "/opt/docdb-mcp/mongo-docdb.py"]
